<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        cv:cardCornerRadius="12dp"
        cv:cardElevation="12dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_layout"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/deal_photo"
                android:src="@drawable/placeholder"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/deal_text"
                android:paddingRight="10dp"
                android:layout_toRightOf="@id/deal_photo"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deal_name"
                android:layout_alignParentTop="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textColor="@color/color_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_name"
                android:layout_below="@+id/deal_name"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/color_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distance"
                android:layout_below="@+id/service_name"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/color_black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lightning_bolt"
                android:src="@drawable/icon_lightning_small"
                android:layout_below="@+id/distance"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_apointment"
                android:layout_toRightOf="@+id/lightning_bolt"
                android:layout_below="@+id/distance"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_light_blue"
                />
            </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/line1"
                android:padding="0px"
                android:layout_margin="0dp"
                android:layout_below="@id/top_layout"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/shareLILayout"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yelp_star_rating"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yelp_logo"
                android:src="@drawable/yelp_icon"
                android:layout_toRightOf="@id/yelp_star_rating"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sale_icon"
                android:src="@drawable/sale_tag"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/price"
                />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
